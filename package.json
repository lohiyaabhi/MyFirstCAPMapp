{
  "name": "CAPMAPP",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.14.2",
    "@sap/cds": "^8",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.21",
    "express": "^4",
    "@cap-js/hana": "^1",
    "@sap/xssec": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.9.0",
    "@cap-js/sqlite": "^1",
    "@types/node": "^22.13.10"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-firstuiapp": "cds watch --open firstuiapp/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "sapux": [
    "app/firstuiapp"
  ],
  "cds": {
    "sql": {
      "native_hana_associations": false
    },
    "requires": {
      "db": "hana",
      "uaa":{
        "kind": "xsuaa"
      },
      "auth": {
        "[development]":{
          "strategy" : "mocked",
          "users":{
            "anubhav":{
              "roles" : ["Viewer"],
              "userAttributes":{
                "BankName":["Bank of America"]
              }
            },
            "ananya":{
              "roles" : ["Viewer","Admin"],
              "userAttributes":{
                "BankName":[]
              }
            }
          }
        },
        "[production]":{
          "strategy" : "JWT"
        }
      }
    }
  }
}
